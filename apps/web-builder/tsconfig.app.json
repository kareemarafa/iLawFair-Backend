{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [],
    "module": "es2020",
    "target": "es2017",
    "lib": ["es2018", "dom"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
