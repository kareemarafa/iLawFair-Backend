{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/admin/src",
  "monorepo": true,
  "root": "apps/admin",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/admin/tsconfig.app.json"
  },
  "projects": {
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "entryFile": "main",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    },
    "tenant": {
      "type": "application",
      "root": "apps/tenant",
      "entryFile": "main",
      "sourceRoot": "apps/tenant/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tenant/tsconfig.app.json"
      }
    },
    "backend-core": {
      "type": "library",
      "root": "libs/backend-core",
      "entryFile": "index",
      "sourceRoot": "libs/backend-core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/backend-core/tsconfig.lib.json"
      }
    },
    "database-connect": {
      "type": "library",
      "root": "libs/database-connect",
      "entryFile": "index",
      "sourceRoot": "libs/database-connect/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database-connect/tsconfig.lib.json"
      }
    },
    "encryption": {
      "type": "library",
      "root": "libs/encryption",
      "entryFile": "index",
      "sourceRoot": "libs/encryption/src",
      "compilerOptions": {
        "tsConfigPath": "libs/encryption/tsconfig.lib.json"
      }
    },
    "interfaces": {
      "type": "library",
      "root": "libs/interfaces",
      "entryFile": "index",
      "sourceRoot": "libs/interfaces/src",
      "compilerOptions": {
        "tsConfigPath": "libs/interfaces/tsconfig.lib.json"
      }
    }
  }
}
